<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="388dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/profilebanner" />

    <Button
        android:id="@+id/enrolledEvents"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/myevents"
        android:layout_toEndOf="@+id/profileImageView"
        android:background="@android:color/holo_blue_bright"
        android:text="Enrolled Events"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <Button
        android:id="@+id/myevents"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView6"
        android:layout_marginBottom="31dp"
        android:background="@android:color/holo_blue_bright"
        android:text="My Events"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView6"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        android:text="Name"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/profileName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_above="@+id/enrolledEvents"
        android:layout_alignStart="@+id/enrolledEvents"
        android:layout_marginBottom="11dp"
        app:srcCompat="@drawable/enrollpic" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/imageView5"
        android:layout_toStartOf="@+id/profileImageView"
        app:srcCompat="@drawable/pencil" />

</RelativeLayout>