<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="204dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/profilebanner"
        android:contentDescription="@string/todo" />


    <Button
        android:id="@+id/enrolledEvents"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/myevents"
        android:layout_marginEnd="65dp"
        android:background="@android:color/holo_blue_bright"
        android:text="@string/enrolled_events"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <Button
        android:id="@+id/myevents"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView6"
        android:layout_marginBottom="16dp"
        android:background="@android:color/holo_blue_bright"
        android:text="@string/my_events"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/myevents"
        android:layout_alignBottom="@+id/myevents"
        android:layout_alignStart="@+id/profileImageView"
        android:text="@string/name"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/profileName"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:layout_marginStart="70dp"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/enrolledEvents"
        android:layout_alignTop="@+id/imageView6"
        app:srcCompat="@drawable/enrollpic"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/profileImageView"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/pencil"
        android:contentDescription="@string/todo" />



</RelativeLayout>